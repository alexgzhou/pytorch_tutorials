{
    "editor.fontSize": 16,
    "markdown.preview.fontSize": 18,
    // "python.pythonPath": "~/git/ml/4.Practices/Python_Machine_Learning_Mini-Course/p3/bin/python",
    // "python.pythonPath": "~/anaconda3/bin/python",
    // "python.pythonPath": "C:\\Users\\Alex\\Anaconda3\\python.exe",
    // "python.pythonPath": "C:\\Users\\Alex\\Anaconda3\\envs\\qtr\\python.exe",
    // "python.pythonPath": "/usr/local/bin/python",
    // "python.pythonPath": "/anaconda3/envs/qtr/bin/python",
    "python.pythonPath": "/opt/conda/bin/python",
    "python.linting.pylintEnabled": false,
    "python.formatting.provider": "yapf",
    "python.terminal.activateEnvironment": false,  // 禁止激活相关环境(停止运行后面的命令), 好像这里设置无效, 在用户设置中配置有效: C:/Users/Alex/Anaconda3/Scripts/activate && conda activate base
    "editor.renderControlCharacters": true,  // 显示控制字符 (换行符, 制表符, 空格等)
    "editor.renderWhitespace": "boundary",  // 渲染空格
    "files.exclude": {  // 资源管理器隐藏的文件或路径
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true
    },
    "files.watcherExclude": {  // exclude specific workspace directories from the VS Code file watcher, https://code.visualstudio.com/docs/setup/linux#_visual-studio-code-is-unable-to-watch-for-file-changes-in-this-large-workspace-error-enospc; Configure glob patterns of file paths to exclude from file watching. Patterns must match on absolute paths (i.e. prefix with ** or the full path to match properly). Changing this setting requires a restart. When you experience Code consuming lots of CPU time on startup, you can exclude large folders to reduce the initial load. `*` 代表任意字符, `/*/` 代表路径下任意文件夹, `/**/` 代表任意多层路径
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/node_modules/*/**": true,
        "**/_build/**": true,
        "**/__pycache__/**": true,
        "**/_data/**": true,
        "**/temp*/**": true,
        "**/v2ray-linux-64/**": true,
        // "**/jupyte*/**": true,
        // "**/pytorch_tutorials/**": true
    },
